<odoo>

    <record id="view_crm_phonecall2task_wizard" model="ir.ui.view">
        <field name="name">crm.phonecall2task.wizard.form</field>
        <field name="model">crm.phonecall2task.wizard</field>
        <field name="arch" type="xml">
            <form string="Convert to Task">
                <group>
                    <field name="project_id" domain="project_id_domain"/>
                    <field name="project_id_domain" invisible="1"/>
                </group>
                <footer>
                    <button type="object" name="action_phonecall_to_task" string="Create Task" class="btn-primary"/>
                    <button string="Cancel" class="btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>
