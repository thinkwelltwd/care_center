<odoo>

    <!--*** Contact Info Form View ***-->
    <record id="view_extra_contact_info_form" model="ir.ui.view">
        <field name="name">extra.contactinfo.form</field>
        <field name="model">extra.contactinfo</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group string="Contact Info Details" col="4">
                        <field name="type"/>
                        <field name="name"/>
                        <field name="notes" colspan="4"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>


    <!--*** Contact Info Tree View ***-->
    <record id="view_extra_contact_info_tree" model="ir.ui.view">
        <field name="name">extra.contactinfo.tree</field>
        <field name="model">extra.contactinfo</field>
        <field name="arch" type="xml">
            <tree>
                <field name="sequence" widget="handle"/>
                <field name="type"/>
                <field name="name"/>
                <field name="notes"/>
            </tree>
        </field>
    </record>

</odoo>
